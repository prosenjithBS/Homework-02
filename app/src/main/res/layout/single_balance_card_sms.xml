<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/balance_border"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingLeft="18dp"
    android:paddingTop="18dp"
    android:paddingEnd="4dp"
    android:paddingRight="8dp"
    android:paddingBottom="12dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_24ssp"
        android:layout_height="@dimen/_24ssp"
        android:background="@drawable/ic_sms_back"
        android:padding="8dp"
        app:layout_editor_absoluteX="34dp"
        app:layout_editor_absoluteY="38dp"
        app:srcCompat="@drawable/ic_comment_alt" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="34"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:textColor="#8090A3"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/details_btn_icon"
        android:text="@string/details_btn_text"
        android:textAllCaps="false"
        android:textColor="#40A8B3"
        app:backgroundTint="@color/white"
        app:iconTint="#009688"
        android:drawableEnd="@drawable/details_btn_icon" />
</LinearLayout>
